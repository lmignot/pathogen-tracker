<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.AppTheme"/>

  <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme"/>

  <style name="AppTheme.OverlapSystemBarVector" parent="Vector.AppTheme"/>

  <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="ms_stepperStyle">@style/DotStepperStyle</item>
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>

  <style name="Vector.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorVectorPrimary</item>
    <item name="colorPrimaryDark">@color/colorVectorPrimaryDark</item>
    <item name="colorAccent">@color/colorVectorAccent</item>
    <item name="android:statusBarColor">@color/colorVectorPrimaryDark</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>

  <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
    <item name="android:textColorPrimary">@android:color/white</item>
    <item name="android:actionMenuTextColor">@android:color/white</item>
    <item name="android:background">@color/colorPrimary</item>
  </style>

  <style name="VectorToolbar" parent="Toolbar">
    <item name="android:background">@color/colorVectorPrimary</item>
  </style>

  <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">28sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="DotStepperStyle">
    <item name="ms_stepperType">dots</item>
    <item name="ms_activeStepColor">@color/colorAccent</item>
    <item name="ms_inactiveStepColor">@color/colorSecondaryText</item>
    <item name="ms_backButtonColor">@color/colorSecondaryText</item>
    <item name="ms_nextButtonColor">@color/colorSecondaryText</item>
    <item name="ms_completeButtonColor">@color/colorAccent</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
